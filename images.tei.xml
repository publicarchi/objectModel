                  <objectName>Plan du Rez-de-Chaussée de la maison de Madame de Thelusson, rue de Provence</objectName>
                  <idno>FolRes169-pl051</idno> 
               </objectIdentifier>
               <physDesc>
                  <objectDesc>
                     <objectType>
                        <technique target="LienVocabulaire">gravure ...</technique>
                     </objectType>
                     <supportDesc>
                        <support>
                           <material>papier...</material>
                           <stamp>estampille de la Bibliothèque d'Art et d'Archéologie</stamp>
                           <watermark>...</watermark>
                        </support>
                        <extent>
                           <dimensions type="albumPlate" unit="cm">
                              <height>nn</height>
                              <width>nn</width>
                           </dimensions>
                           <dimensions type="sheet" unit="cm">
                              <height>nn</height>
                              <width>nn</width>
                           </dimensions>
                           <dimensions type="plate" unit="cm">
                              <height>nn</height>
