                     <layoutDesc>
                        <layout>
                           <desc>La planche a été découpée à la cuvette et collée au sein de l’album</desc>
                        </layout>
                     </layoutDesc>
                  </objectDesc>
               </physDesc>
               <note>
                  <listRelation>
                     <relation type="LRM" name="Rnn" active="" passive=""></relation>
                     <relation type="CRM" name="Pnn" active="" passive=""></relation>
                  </listRelation>
               </note>
            </object>
         </listObject>
         
         <!-- décisions à prendre concernant la manière dont nous allons présenter les oeuvres (intellectuelles et physiques) à lier avec les planches -->
         <!-- listes de type LRM avec oeuvre, expression, manifestation et item ? -->
         <!-- listes liées aux différentes manifestations de l'oeuvre architecturale ? (édifice, gravure, dessin...) -->
         <listObject type="">
            <object>
               <objectIdentifier></objectIdentifier>
            </object>
         </listObject>
         
         <listPerson>
            <!-- liste qui sera peut être dans le header ? Permettra ensuite de faire des relations entre les oeuvres, Ledoux et le graveur -->
            <person xml:id="Ledoux">
               <name>Claude Nicolas Ledoux</name>
            </person>
            <person xml:id="Hulk">
               <name>Abraham Jacobsz Hulk</name>
            </person>
         </listPerson>
