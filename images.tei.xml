<TEI xmlns="http://www.tei-c.org/ns/1.0">
  <teiHeader>
      <fileDesc>
         <titleStmt>
            <title>Fichier d’exemple de descriptions de gravures pour le projet Ledoux</title>
         </titleStmt>
         <publicationStmt>
            <publisher>publicarchi</publisher>
