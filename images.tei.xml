         <listObject type="works">
            <head>Oeuvres</head>
            <object xml:id="hotelThelussonW">
               <objectIdentifier>
                  <objectName>Hôtel de Thélusson</objectName>
               </objectIdentifier>
               <note>
                  <listEvent>
                     <!-- Les événements/activités liées à une oeuvre peuvent être listés dans listEvent -->
                     <event type="CRM" ref="http://www.cidoc-crm.org/Entity/e65-creation/version-6.2" from="1778" xml:id="creation001">
                        <desc>Création</desc>
                     </event>
                  </listEvent>
                  <listRelation>
                     <!-- exemple de relation entre un événement et un acteur 
                     Des relations LRM peuvent également être précisées pour lier les différentes manifestations d'une oeuvre -->
                     <relation type="CRM" name="P14" ref="http://www.cidoc-crm.org/node/4435" active="#creation001" passive="#Ledoux"></relation>
                  </listRelation>
               </note>
            </object>
         </listObject>
         
         <listObject type="buildings">
            <head>Édifices</head>
            <object xml:id="hotelThelussonB">
               <objectIdentifier>
                  <objectName>Hôtel de Thélusson</objectName>
               </objectIdentifier>
               <note>
                  <listEvent>
                     <event type="CRM" ref="http://www.cidoc-crm.org/Entity/e12-production/version-6.2" from="1778" xml:id="production001">
                        <desc>Construction</desc>
                     </event>
                  </listEvent>
                  <listRelation>
                     <!-- exemple de relation -->
                     <relation type="LRM" name="R3" active="#hotelThelussonW" passive="#hotelThelussonB"/>
                  </listRelation>
               </note>
            </object>
         </listObject>
         
         <listObject type="plates">
            <head>Manifestations gravées (plaques)</head>
            <object xml:id="plaque005">
               <objectIdentifier>
                  <objectName>Plaque de la Vue perspective de l’hôtel Thélusson depuis la grotte</objectName>
               </objectIdentifier>
               <note>
                  <listEvent>
                     <event type="CRM" ref="http://www.cidoc-crm.org/Entity/e12-production/version-6.2" xml:id="production002">
                        <desc>Gravure de la plaque</desc>
                     </event>
                  </listEvent>
                  <listRelation>
                     <!-- exemple de relation -->
                     <relation type="LRM" name="R3" active="#hotelThelussonW" passive="#plaque005"/>
                  </listRelation>
               </note>
            </object>
         </listObject>
         
         <listPerson>
            <!-- liste qui sera peut être dans le header ? Permettra ensuite de faire des relations entre les oeuvres, Ledoux et le graveur -->
            <person xml:id="Ledoux">
               <name>Claude Nicolas Ledoux</name>
            </person>
            <person xml:id="Hulk">
               <name>Abraham Jacobsz Hulk</name>
            </person>
         </listPerson>
      </body>
