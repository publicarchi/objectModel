                     <layoutDesc>
                        <layout>
                           <desc>La planche a été découpée à la cuvette et collée au sein de l’album</desc>
                        </layout>
                     </layoutDesc>
                  </objectDesc>
               </physDesc>
               <note>
                  <listRelation>
                     <relation type="LRM" name="Rnn" active="" passive=""></relation>
                     <relation type="CRM" name="Pnn" active="" passive=""></relation>
                  </listRelation>
               </note>
            </object>
            
            <object xml:id="FolRes169-pl052">
               <!-- https://sharedocs.huma-num.fr/wl/?id=uv0tvIxjNQ7DboQQAIPLY6KffsKefQW2&path=IMG_1634.jpg -->
               <objectIdentifier>
                  <objectName>Vue perspective de l’entrée de la maison de Madame de Thelusson</objectName>
                  <idno>FolRes169-pl052</idno> 
               </objectIdentifier>
               <physDesc>
                  <objectDesc>
                     <objectType>
                        <technique target="LienVocabulaire">gravure ...</technique>
