  <text>
      <body>
         <listObject type="albumPlates">
            <!-- première liste d'objets correspond aux planches du recueil (comment faire dans le cas des planches où sont regroupées plusieurs gravures ?) -->
            
            <!-- exemple d'encodage des planches se référant à l’hôtel Thélusson (ex. INHA - Fol Res 169) -->
            <object xml:id="FolRes169-pl050">
               <!-- https://sharedocs.huma-num.fr/wl/?id=uv0tvIxjNQ7DboQQAIPLY6KffsKefQW2&path=IMG_1630.jpg -->
               <objectIdentifier>
                  <!-- Lorsque la gravure n'a pas de titre, préciser qu'il est forgé avec @type="forged" -->
                  <objectName type="forged">Vue perspective de l’hôtel Thélusson depuis la grotte</objectName>
                  <!-- quand la planche a une côte, la préciser dans idno -->
                  <idno>FolRes169-pl050</idno> 
               </objectIdentifier>
               <physDesc>
                  <objectDesc>
                     <!-- description matérielle -->
                     <objectType> <!-- balise existante permettant de décrire le type d'objet auquel l'oeuvre appartient.
                                       Sinon inventer une balise spécifique comme techniqueDesc ou mediumDesc -->
                        <!-- description de la technique -->
                        <!-- attributs : @type pour préciser "main" ou "sub" quand il y a plusieurs techniques 
                                         @target pour indiquer le lien vers le thesaurus -->
                        <technique target="LienVocabulaire">gravure ...</technique>
                     </objectType>
                     <supportDesc>
                        <support>
                           <!-- description du papier sur lequel l'estampe a été imprimée -->
                           <material>papier...</material>
                           <stamp>estampille des collections Jacques Doucet</stamp>
                           <watermark>...</watermark>
                        </support>
                        <extent>
                           <!-- dimensions de la planche du recueil 
                                pas forcément utile de répéter les dimensions de la page du recueil puisque cela sera indiqué dans le header -->
                           <dimensions type="albumPlate" unit="cm">
                              <height>nn</height>
                              <width>nn</width>
                           </dimensions>
                           <!-- dimensions de la feuille imprimée -->
                           <dimensions type="sheet" unit="cm">
                              <height>nn</height>
                              <width>nn</width>
                           </dimensions>
                           <!-- dimensions de la cuvette/plaque -->
                           <dimensions type="plate" unit="cm">
                              <height>nn</height>
                              <width>nn</width>
                           </dimensions>
                        </extent>
                     </supportDesc>
                     <layoutDesc>
                        <!-- précisions sur la mise en page  -->
                        <layout>
                           <desc>La planche a été découpée à la cuvette et collée au sein de l’album</desc>
                        </layout>
                     </layoutDesc>
                  </objectDesc>
               </physDesc>
               <note>
                  <listRelation>
                     <relation type="LRM" name="Rnn" active="" passive=""></relation>
                     <relation type="CRM" name="Pnn" active="" passive=""></relation>
                  </listRelation>
               </note>
            </object>
            
